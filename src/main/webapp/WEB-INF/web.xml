<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- Initialize database connection -->
    <listener>
        <listener-class>
            pia.util.DBManager
        </listener-class>
    </listener>
    <listener>
        <listener-class>
            pia.util.DataManager
        </listener-class>
    </listener>

    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>upload-dir</param-name>
        <param-value>
            /var/lib/logicnet
        </param-value>
    </context-param>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>
                UserControls
            </web-resource-name>
            <url-pattern>/user/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>PUT</http-method>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>
                PostControl
            </web-resource-name>
            <url-pattern>/post/*</url-pattern>
            <http-method>POST</http-method>
            <http-method>PUT</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description>
                Let only logged in users see this.
            </description>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <role-name>user</role-name>
    </security-role>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>Test Realm</realm-name>
        <form-login-config>
            <form-login-page>/login</form-login-page>
            <form-error-page>/error</form-error-page>
        </form-login-config>
    </login-config>

    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>pia.servlet.IndexServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Welcome</servlet-name>
        <servlet-class>pia.servlet.WelcomeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>PublicSpace</servlet-name>
        <servlet-class>pia.servlet.PublicSpaceServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>PrivateSpace</servlet-name>
        <servlet-class>pia.servlet.PrivateSpaceServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>pia.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>pia.servlet.RegisterServlet</servlet-class>
        <multipart-config>
            <location>/tmp</location>
            <max-file-size>20848820</max-file-size>
            <max-request-size>418018841</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>

    <servlet>
        <servlet-name>Post</servlet-name>
        <servlet-class>pia.servlet.PostServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>PostLike</servlet-name>
        <servlet-class>pia.servlet.PostLikeServlet</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ErrorControl</servlet-name>
        <servlet-class>pia.servlet.ErrorControlServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Welcome</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PublicSpace</servlet-name>
        <url-pattern>/stream</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PrivateSpace</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Post</servlet-name>
        <url-pattern>/post</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>PostLike</servlet-name>
        <url-pattern>/post/like</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ErrorControl</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
</web-app>
