<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- Initialize database connection -->
    <listener>
        <listener-class>
            pia.util.DataManager
        </listener-class>
    </listener>
    <listener>
        <listener-class>
            pia.util.DBManager
        </listener-class>
    </listener>

    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>

    <listener>
        <listener-class>
            org.apache.myfaces.webapp.StartupServletContextListener
        </listener-class>
    </listener>

    <context-param>
        <description>Location to store uploaded file</description>
        <param-name>upload-dir</param-name>
        <param-value>/var/lib/logicnet</param-value>
    </context-param>

    <context-param>
        <param-name>BootsFaces_USETHEME</param-name>
        <param-value>true</param-value>
    </context-param>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>
                UserControls
            </web-resource-name>
            <url-pattern>/user/*</url-pattern>
            <http-method>GET</http-method>
            <http-method>POST</http-method>
            <http-method>PUT</http-method>
        </web-resource-collection>
        <web-resource-collection>
            <web-resource-name>
                PostControl
            </web-resource-name>
            <url-pattern>/post/*</url-pattern>
            <http-method>POST</http-method>
            <http-method>PUT</http-method>
        </web-resource-collection>
        <auth-constraint>
            <description>
                Let only logged in users see this.
            </description>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>
    <security-role>
        <role-name>user</role-name>
    </security-role>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>login_realm</realm-name>
        <form-login-config>
            <form-login-page>/error</form-login-page>
            <form-error-page>/error</form-error-page>
        </form-login-config>
    </login-config>

    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>Index</servlet-name>
        <servlet-class>pia.servlet.IndexServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

<!--    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>pia.servlet.RegisterServlet</servlet-class>
        <multipart-config>
            <location>/tmp</location>
            <max-file-size>20848820</max-file-size>
            <max-request-size>418018841</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>-->

    <servlet>
        <servlet-name>ErrorControl</servlet-name>
        <servlet-class>pia.servlet.ErrorControlServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ErrorControl</servlet-name>
        <url-pattern>/error</url-pattern>
    </servlet-mapping>
</web-app>
